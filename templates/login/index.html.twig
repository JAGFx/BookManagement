{% extends 'base2.html.twig' %}


{% block body %}

{% if error %}
<div class="alert alert-dismissible alert-danger">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    <strong>Oups ! Identifiant ou mot de passe incorrect </strong> <a href="#" class="alert-link"> 
  </div>

{% endif %}


<h1>Connexion ! </h1>

<form action="{{ path('app_login') }}" method="post">
    <div class="form-group">
        <input placeholder="Nom" required name ="_username" type="text" class="form_control">
    </div>

    <div class="form-group">
        <input placeholder="Password" required name ="_password" type="password" class="form_control">
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success"> Connexion </button>

    </div>
</form>
{% endblock %}